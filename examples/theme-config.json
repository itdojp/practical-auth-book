{
  "theme": "modern",
  "themeOptions": {
    "modern": {
      "colors": {
        "primary": "#0066cc",
        "secondary": "#6c757d",
        "background": "#ffffff",
        "surface": "#f8f9fa",
        "text": "#333333",
        "textSecondary": "#666666",
        "border": "#dee2e6",
        "success": "#28a745",
        "warning": "#ffc107",
        "error": "#dc3545"
      },
      "typography": {
        "fontFamily": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif",
        "baseFontSize": "16px",
        "lineHeight": "1.6",
        "headingFontFamily": "inherit",
        "headingWeight": "700",
        "h1Size": "2.5rem",
        "h2Size": "2rem",
        "h3Size": "1.5rem"
      },
      "layout": {
        "maxWidth": "800px",
        "sidebarWidth": "250px",
        "headerHeight": "60px"
      }
    },
    "classic": {
      "colors": {
        "primary": "#8b4513",
        "background": "#fdf6e3"
      },
      "typography": {
        "fontFamily": "Georgia, serif",
        "baseFontSize": "18px",
        "lineHeight": "1.8"
      }
    },
    "minimal": {
      "typography": {
        "baseFontSize": "18px",
        "lineHeight": "1.75"
      },
      "layout": {
        "maxWidth": "650px"
      }
    }
  }
}